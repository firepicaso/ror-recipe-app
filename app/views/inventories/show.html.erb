<% if @inventory.user == current_user %>
  <div class="inventory-details">
    <h1 class="inventory-title">Inventory 1</h1>
    <h2 class="inventory-name"><%= @inventory.name %></h2>
    <button class="add-food-btn">
      <%= link_to "Add food", new_inventory_food_path(inventory_id: @inventory.id) %>
    </button>
    <hr>

    <% if @inventory_foods.empty? %>
      <h4 class="no-foods-message">No foods have been added yet.</h4>
    <% else %>
      <table class="food-table">
        <thead>
          <tr>
            <th>Food</th>
            <th>Quantity</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @inventory_foods.each do |inventory_food| %>
            <tr>
              <td><div class="food-name"><%= inventory_food.food.name %></div></td>
              <td><div class="food-quantity"><%= inventory_food.quantity %> <%= inventory_food.food.measurement_unit %></div></td>
              <td class="action">
                <div>
                  <%= link_to "Remove", inventory_food_path(inventory_id: @inventory.id, id: inventory_food.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
<% else %>
  <div class="unauthorized-message">
    <h4>You are not authorized to see this inventory.</h4>
  </div>
<% end %>
