<div class="add-inventory-container">
  <h2>Add new inventory</h2>

  <%= turbo_frame_tag @inventory do %>
    <%= form_with model: @inventory do |form| %>
      <% if @inventory.errors.any? %>
        <div role="alert" class="error-messages">
          <% @inventory.errors.full_messages.each do |message| %>
            <div class="error-message"><%= message %></div>
          <% end %>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", required: true %>
      </div>

      <%= form.submit "Create", data: { turbo: false }, class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>
